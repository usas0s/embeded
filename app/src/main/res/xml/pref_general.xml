<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="알림">
        <SwitchPreference
            android:defaultValue="true"
            android:key="example_switch"
            android:summary="@string/pref_description_social_recommendations"
            android:title="@string/pref_title_social_recommendations" />
    </PreferenceCategory>

    <PreferenceCategory android:title="정보">
        <Preference
            android:title="@string/pref_title_version_info"
            android:summary="@string/pref_description_version_info"/>
        <Preference
            android:title="@string/pref_title_info"
            android:summary="@string/pref_description_developer_info"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="서비스 문의">
        <Preference
            android:key="main_setting_notice"
            android:title="@string/pref_title_notice" />
        <Preference
            android:key="main_setting_use_statement"
            android:title="@string/pref_title_use_statement" />
        <Preference
            android:key="main_setting_privacy_statement"
            android:title="@string/pref_title_privacy_statement" />
        <Preference
            android:key="main_setting_report_content"
            android:title="@string/pref_title_report_content" />
    </PreferenceCategory>

</PreferenceScreen>
